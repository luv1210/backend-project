<%- include('header')%>

<div class="container py-5">
  <div class="card add-movie-card border-0">

    <!-- Header -->
    <div class="card-header add-movie-header text-center py-4">
      <h3 class="fw-bold mb-1">
        <i class="fa-solid fa-circle-plus me-2"></i>Add New Movie
      </h3>
      <p class="mb-0 small">Add movie details to your cinema library</p>
    </div>

    <!-- Body -->
    <div class="card-body p-4 p-lg-5">
      <form action="/add-movie" method="post" enctype="multipart/form-data">

        <div class="row g-4">

          <!-- LEFT -->
          <div class="col-lg-6">
            <h5 class="section-title">
              <i class="fa-solid fa-film me-2"></i>Basic Information
            </h5>

            <div class="form-floating mb-3">
              <input type="text" name="title" class="form-control glass-input" placeholder="Movie Title" required>
              <label>Movie Title</label>
            </div>

            <div class="form-floating mb-3">
              <input type="text" name="director" class="form-control glass-input" placeholder="Director" required>
              <label>Director</label>
            </div>

            <div class="row g-3">
              <div class="col-md-6">
                <div class="input-group">
                  <span class="input-group-text"><i class="fa-solid fa-calendar"></i></span>
                  <input type="date" name="year" class="form-control glass-input" required>
                </div>
              </div>

              <div class="col-md-6">
                <div class="input-group">
                  <span class="input-group-text"><i class="fa-solid fa-clock"></i></span>
                  <input type="number" name="duration" class="form-control glass-input" placeholder="Duration (min)" required>
                </div>
              </div>
            </div>

            <div class="input-group mt-3">
              <span class="input-group-text"><i class="fa-solid fa-globe"></i></span>
              <select name="language" class="form-select glass-input" required>
                <option class="bg-dark">Hindi</option>
                <option class="bg-dark">English</option>
                <option class="bg-dark">Telugu</option>
              </select>
            </div>
          </div>

          <!-- RIGHT -->
          <div class="col-lg-6">
            <h5 class="section-title">
              <i class="fa-solid fa-circle-info me-2"></i>Additional Information
            </h5>

            <label class="form-label text-white">Genre</label>
            <select name="genre" class="form-select glass-input mb-3 bg-black " required>
              <option class="bg-dark">Action</option>
              <option class="bg-dark">Comedy</option>
              <option class="bg-dark">Drama</option>
              <option class="bg-dark">Horror</option>
              <option class="bg-dark">Sci-Fi</option>
              <option class="bg-dark">Romance</option>
              <option class="bg-dark">Thriller</option>
              <option class="bg-dark">Documentary</option>
            </select>

            <label class="form-label text-white">Industry</label>
            <select name="industry" class="form-select  mb-3" required>
              <option class="bg-dark text-white">Bollywood</option>
              <option class="bg-dark text-white">Hollywood</option>
            </select>

            <label class="form-label text-white">IMDB Rating</label>
            <div class="input-group mb-3">
              <input type="number" name="rating" class="form-control glass-input" placeholder="1 â€“ 10" min="0" max="10">
              <span class="input-group-text">/10</span>
            </div>

            <label class="form-label text-white">Movie Poster</label>
            <div class="input-group">
              <input type="file" name="poster" class="form-control glass-input" required>
              <span class="input-group-text"><i class="fa-solid fa-upload"></i></span>
            </div>
          </div>
        </div>

        <!-- Button -->
        <div class="text-end mt-5">
          <button type="submit" class="btn btn-gradient px-5 py-2">
            <i class="fa-solid fa-check me-2"></i>Add Movie
          </button>
        </div>

      </form>
    </div>
  </div>
</div>


<style>
  .add-movie-card{
  background: linear-gradient(135deg,#1b1035,#2a145a);
  border-radius:20px;
  box-shadow:0 25px 50px rgba(0,0,0,0.45);
}

.add-movie-header{
  background: linear-gradient(135deg,#a855f7,#ec4899);
  color:#fff;
  border-radius:20px 20px 0 0;
}

.section-title{
  color:#facc15;
  margin-bottom:20px;
}

.glass-input{
  background: rgba(255,255,255,0.08) !important;
  border:1px solid rgba(255,255,255,0.2) !important;
  color:#fff !important;
}

.glass-input::placeholder{
  color:#cbd5f5;
}

.input-group-text{
  background: rgba(255,255,255,0.12);
  border:1px solid rgba(255,255,255,0.2);
  color:#fff;
}

.btn-gradient{
  background: linear-gradient(135deg,#a855f7,#ec4899);
  border:none;
  color:#fff;
}

.btn-gradient:hover{
  transform:translateY(-2px);
  box-shadow:0 10px 25px rgba(236,72,153,0.5);
}

</style>

<%- include('footer')%>